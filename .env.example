# AWS Configuration
# The AWS region where resources will be created
AWS_REGION=us-east-1

# Optional: AWS Profile to use (if you have multiple profiles configured)
# AWS_PROFILE=default

# Optional: Specific AMI ID to use (if not set, latest Amazon Linux will be auto-detected)
# AMI_ID=ami-xxxxxxxxxxxxxxxxx

# Project Configuration
# Tag value to identify all resources created by this project
PROJECT_TAG=AutomationLab

# Tag key for project identification
PROJECT_TAG_KEY=Project

# Environment tag (dev, staging, production, etc.)
ENVIRONMENT_TAG=dev

# EC2 Instance Configuration
# Instance type for EC2 instances
INSTANCE_TYPE=t2.micro

# Default name for EC2 instances
INSTANCE_NAME=AutomationLab-Instance

# Key pair name for SSH access
KEY_PAIR_NAME=automation-lab-keypair

# Path to store the private key file
KEY_PAIR_FILE=./automation-lab-keypair.pem

# Security Group Configuration
# Name for the security group
SECURITY_GROUP_NAME=devops-sg

# Description for the security group
SECURITY_GROUP_DESC=DevOps Security Group for AutomationLab

# SSH access configuration
SSH_PORT=22
SSH_CIDR=0.0.0.0/0

# HTTP access configuration
HTTP_PORT=80
HTTP_CIDR=0.0.0.0/0

# S3 Bucket Configuration
# Prefix for S3 bucket names (will have timestamp and random suffix added)
S3_BUCKET_PREFIX=automation-lab

# Sample file to upload to S3
S3_SAMPLE_FILE=welcome.txt

# Content for the sample file
S3_SAMPLE_CONTENT=Welcome to AWS S3! This bucket was created by the AutomationLab scripts.

# Resource Tracking
# JSON file to track created resources for cleanup
RESOURCE_TRACKING_FILE=./created_resources.json
